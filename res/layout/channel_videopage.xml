<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp20"
        android:paddingTop="@dimen/dp20" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp150" >

            <View
                android:id="@+id/vw_center_horizonta1_one"
                android:layout_width="@dimen/dp20"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:id="@+id/rl_channel_btn_movie"
                android:layout_width="@dimen/dp150"
                android:layout_height="@dimen/dp150"
                android:layout_toLeftOf="@+id/vw_center_horizonta1_one"
                android:background="@drawable/pd_bk"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_pd_dy2"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:src="@drawable/pd_dy" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="电影"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/dp16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_channel_btn_top"
                android:layout_width="@dimen/dp150"
                android:layout_height="@dimen/dp150"
                android:layout_toRightOf="@+id/vw_center_horizonta1_one"
                android:background="@drawable/pd_bk"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:src="@drawable/icon_channel_top" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="小视频"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/dp16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_channel_btn_tv"
                android:layout_width="@dimen/dp150"
                android:layout_height="@dimen/dp150"
                android:layout_toRightOf="@+id/vw_center_horizonta1_one"
                android:background="@drawable/pd_bk"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:src="@drawable/pd_ds" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="电视"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/dp16" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp150"
            android:layout_marginTop="@dimen/dp20"
            android:visibility="gone" >

            <View
                android:id="@+id/vw_center_horizonta1_two"
                android:layout_width="@dimen/dp20"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:id="@+id/rl_channel_btn_anime"
                android:layout_width="@dimen/dp150"
                android:layout_height="@dimen/dp150"
                android:layout_toLeftOf="@+id/vw_center_horizonta1_two"
                android:background="@drawable/pd_bk"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_pd_dy"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:src="@drawable/pd_dm" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="动漫"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/dp16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_channel_btn_video"
                android:layout_width="@dimen/dp150"
                android:layout_height="@dimen/dp150"
                android:layout_toRightOf="@+id/vw_center_horizonta1_two"
                android:background="@drawable/pd_bk"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:src="@drawable/pd_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="视频"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/dp16" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp150"
            android:layout_marginTop="@dimen/dp20" >

            <View
                android:id="@+id/vw_center_horizonta1_three"
                android:layout_width="@dimen/dp20"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:id="@+id/rl_channel_btn_network"
                android:layout_width="@dimen/dp150"
                android:layout_height="@dimen/dp150"
                android:layout_toLeftOf="@+id/vw_center_horizonta1_three"
                android:background="@drawable/pd_bk"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_pd_dy_1"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:src="@drawable/icon_channel_btn_network" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="上网必备"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/dp16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_channel_btn_recommend"
                android:layout_width="@dimen/dp150"
                android:layout_height="@dimen/dp150"
                android:layout_toRightOf="@+id/vw_center_horizonta1_three"
                android:background="@drawable/pd_bk"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:src="@drawable/icon_channel_btn_recommend" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="必看推荐"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/dp16" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>