<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dp15"
    android:background="@color/bg_white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <View style="@style/horizontal_partition_line_style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp15" >

        <ImageView
            android:id="@+id/iv_tv_icon"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp125"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/default_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp133"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:layout_toRightOf="@+id/iv_tv_icon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:enabled="true"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="花--"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/dp14" />

            <RelativeLayout
                android:id="@+id/tv_up_layout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3" >

                <TextView
                    android:id="@+id/tv_up_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_text_red_oval"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="1dp"
                    android:text="更新至"
                    android:textColor="@color/bg_white"
                    android:textSize="@dimen/dp12" />

                <TextView
                    android:id="@+id/tv_up_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_up_"
                    android:paddingLeft="@dimen/dp3"
                    android:paddingRight="@dimen/dp4"
                    android:text="--集"
                    android:textColor="@color/bg_red"
                    android:textSize="@dimen/dp14" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_tv_direct"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="导演：--"
                android:textColor="@color/bg_text_gray"
                android:textSize="@dimen/dp12" />

            <TextView
                android:id="@+id/tv_tv_lead_role"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="主演：--"
                android:textColor="@color/bg_text_gray"
                android:textSize="@dimen/dp12" />

            <TextView
                android:id="@+id/tvt_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="类型：--"
                android:textColor="@color/bg_text_gray"
                android:textSize="@dimen/dp12" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4" >

                <TextView
                    android:id="@+id/tv_bt_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_text_yellow_oval"
                    android:drawableLeft="@drawable/plat_smell_iocm"
                    android:drawablePadding="@dimen/dp2"
                    android:paddingBottom="@dimen/dp3"
                    android:paddingLeft="@dimen/dp5"
                    android:paddingRight="@dimen/dp5"
                    android:paddingTop="@dimen/dp3"
                    android:text="@string/play_credits_now"
                    android:textColor="@color/bg_white"
                    android:textSize="@dimen/dp14" />

                <TextView
                    android:id="@+id/tv_tv_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp15"
                    android:drawablePadding="@dimen/dp5"
                    android:drawableRight="@drawable/pull_down"
                    android:padding="@dimen/dp4"
                    android:text="@string/see_details"
                    android:textColor="@color/bg_text_gray"
                    android:textSize="@dimen/dp12" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/horizontal_partition_line_style" />

    <GridView
        android:id="@+id/gv_tv_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:horizontalSpacing="1dp"
        android:numColumns="8" >
    </GridView>

</LinearLayout>