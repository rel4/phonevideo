<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y96"
    android:background="@color/title_color"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_title_backicon"
        android:layout_width="@dimen/x100"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/x50" />

    <ImageView
        android:layout_width="@dimen/x34"
        android:layout_height="@dimen/y34"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x20"
        android:src="@drawable/title_back_icon" />

    <TextView
        android:id="@+id/tv_title_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="--"
        android:textColor="@color/bg_white"
        android:textSize="@dimen/x38" />

    <TextView
        android:id="@+id/tv_title_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x20"
        android:text="--"
        android:textColor="@color/bg_white"
        android:textSize="@dimen/x32"
        android:visibility="gone" />

</RelativeLayout>