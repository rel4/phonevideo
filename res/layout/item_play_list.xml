<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_select_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="选集"
            android:textColor="@color/bg_dark_black" />

        <TextView
            android:id="@+id/tv_dowm_cache"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="缓存"
            android:textColor="@color/bg_dark_black" />

        <TextView
            android:id="@+id/tv_play_source"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp15"
            android:layout_weight="1"
            android:gravity="right"
            android:text="播放来源"
            android:textColor="@color/bg_dark_black" />
    </LinearLayout>

    <View style="@style/horizontal_partition_line_style" />

    <GridView
        android:paddingLeft="@dimen/dp5"
        android:id="@+id/grid_play_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:horizontalSpacing="@dimen/dp1"
        android:numColumns="8"
        android:scrollbars="none" >
    </GridView>

</LinearLayout>