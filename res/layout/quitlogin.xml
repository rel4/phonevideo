<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zc_bj"
    android:gravity="top" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginTop="@dimen/dp90"
        android:background="@drawable/tc_bsbj"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp44"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp90"
            android:background="@color/bg_white" >

            <LinearLayout
                android:id="@+id/ll_quitlogin_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_quitlogin_zhtb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/tcdlhsy_zhtb" />

                <View
                    android:id="@+id/v_quitlog_line1"
                    android:layout_width="@dimen/dp1"
                    android:layout_height="@dimen/dp20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp3"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp2"
                    android:gravity="center_vertical"
                    android:text="用户名"
                    android:textColor="@color/bg_dark_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp10"
                    android:gravity="center_vertical"
                    android:text="帐号/手机号/邮箱"
                    android:textColor="@color/bg_light_black" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_quitlogin_account"
                style="?android:attr/textViewStyle"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp50"
                android:layout_centerVertical="true"
                android:background="@drawable/quitlogin"
                android:ems="10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp10"
                android:textColor="@color/bg_dark_black" >

                <requestFocus />
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp44"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp15"
            android:background="@color/bg_white" >

            <LinearLayout
                android:id="@+id/ll_quitlogin_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_quitlogin_mmtb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/tcdlhsy_mmtb" />

                <View
                    android:id="@+id/v_quitlog_line2"
                    android:layout_width="@dimen/dp1"
                    android:layout_height="@dimen/dp20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp5"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/tv_quitlogin_password"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp4"
                    android:gravity="center"
                    android:text="密码"
                    android:textColor="@color/bg_dark_black" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_quitlogin_password"
                style="?android:attr/textViewStyle"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp50"
                android:layout_centerVertical="true"
                android:background="@drawable/quitlogin"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dp5"
                android:textColor="@color/bg_dark_black" >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp15" >

            <TextView
                android:id="@+id/tv_quitlogin_retrieve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:textColor="@color/bg_dark_black" />

            <TextView
                android:id="@+id/tv_quit_login_gohome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="直接进入首页"
                android:textColor="@color/bg_dark_black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_quitlogin_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/shape_border_maincolor"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/bg_white" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp35"
            android:background="@drawable/tcdlhsy_jjx" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp25"
            android:layout_marginTop="@dimen/dp15"
            android:background="@color/bg_white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/tv_quit_movie"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tcdlhsy_bban"
                android:gravity="center"
                android:text="观影社区"
                android:textColor="@color/bg_shallowblack" />

            <TextView
                android:id="@+id/tv_quit_recommerd"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_weight="1"
                android:background="@drawable/tcdlhsy_bban"
                android:gravity="center"
                android:text="必看推荐"
                android:textColor="@color/bg_shallowblack" />

            <TextView
                android:id="@+id/tv_quit_app"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tcdlhsy_bban"
                android:gravity="center"
                android:text="应用发现"
                android:textColor="@color/bg_shallowblack" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_quitlogin_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp50"
        android:background="@drawable/tcdlhsy_tx" />

</RelativeLayout>