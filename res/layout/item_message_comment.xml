<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp29"
        android:orientation="vertical" >

        <TextView
            
            android:id="@+id/tv_comment_title"
              android:layout_marginTop="@dimen/dp15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:text="@string/str_init_text"
            android:textColor="@color/bg_text_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_init_text"
            android:layout_marginTop="@dimen/dp4"
            android:layout_marginBottom="@dimen/dp4"
            android:textColor="@color/bg_dark_black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_init_text"
            android:textColor="@color/bg_text_gray"
            android:layout_marginBottom="@dimen/dp15"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp15"
        android:src="@drawable/zc_jr" />

    <View 
        
        android:layout_alignParentBottom="true"
      
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp15"
        style="@style/horizontal_partition_line_style" />

</RelativeLayout>