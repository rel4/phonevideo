<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.limaoso.phonevideo.view.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <View style="@style/horizontal_partition_line_style"
       />
    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="@dimen/dp10"
        android:background="@null"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/btn_tab_home_selector"
            android:text="首页"
             />

        <RadioButton
            android:id="@+id/rb_channel"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/btn_tab_channel_selector"
            android:text="频道" />

        <RadioButton
            android:id="@+id/rb_find"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/btn_tab_find_selector"
            android:text="发现" />

        <RadioButton
            android:id="@+id/rb_oneself"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/btn_tab_oneself_selector"
            android:text="我的" />

       
    </RadioGroup>

</LinearLayout>