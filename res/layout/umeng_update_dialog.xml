<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/umeng_update_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@drawable/umeng_update_dialog_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp34"
            android:layout_marginTop="@dimen/dp20" >

            <ImageView
                android:id="@+id/umeng_update_id_cancel"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp22"
                android:background="@drawable/update_button_cancel" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="发现新版本"
                android:textColor="@color/word_black"
                android:textSize="@dimen/dp18" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/umeng_update_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp15"
                    android:textColor="#000"
                    android:textSize="@dimen/dp13" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/umeng_update_id_ok"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp34"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/update_button_ok"
            android:gravity="center"
            android:paddingLeft="@dimen/dp25"
            android:paddingRight="@dimen/dp25"
            android:text="立即安装"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp18" />
    </LinearLayout>

</RelativeLayout>