<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal" >

    <LinearLayout
        android:id="@+id/pop_selectgender_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/btn_selectgender_male"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp50"
            android:gravity="center"
            android:text="男"
            android:textColor="@color/bg_black"
            android:textStyle="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp0.2"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:background="@color/bg_gray"  />

        <TextView
            android:id="@+id/btn_selectgender_female"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp50"
            android:gravity="center"
            android:text="女"
            android:textColor="@color/bg_black"
            android:textStyle="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp0.2"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:background="@color/bg_gray"  />

        <TextView
            android:id="@+id/btn_selectgender_secrecy"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp50"
            android:gravity="center"
            android:text="保密"
            android:textColor="@color/bg_black"
            android:textStyle="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp0.2"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:background="@color/bg_gray" />

        <TextView
            android:id="@+id/btn_selectgender_cancel"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginBottom="@dimen/dp15"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/bg_black"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>