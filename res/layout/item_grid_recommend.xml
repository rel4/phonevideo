<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp5"
    android:paddingLeft="@dimen/dp15"
    android:paddingRight="@dimen/dp15" >

    <LinearLayout
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp130" >

            <ImageView
                android:id="@+id/iv_item_recommend_icon_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/default_logo" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"
                android:layout_alignParentBottom="true"
                android:alpha="0.5"
                android:background="#000" >

                <TextView
                    android:id="@+id/tv_igr_show_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/bg_white"
                    android:textSize="@dimen/dp13" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_recommend_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp6"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="初始化……"
            android:textColor="#464545"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_item_recommend_introduce_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp2"
            android:singleLine="true"
            android:text="初始化……"
            android:textColor="#999"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp5"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp130" >

            <ImageView
                android:id="@+id/iv_item_recommend_icon_2"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:background="@drawable/default_logo" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"
                android:layout_alignParentBottom="true"
                android:alpha="0.5"
                android:background="#000" >

                <TextView
                    android:id="@+id/tv_igr_show_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/bg_white"
                    android:textSize="@dimen/dp13" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_recommend_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp6"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="初始化……"
            android:textColor="#464545"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_item_recommend_introduce_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp2"
            android:singleLine="true"
            android:text="初始化……"
            android:textColor="#999"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp130" >

            <ImageView
                android:id="@+id/iv_item_recommend_icon_3"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:background="@drawable/default_logo" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"
                android:layout_alignParentBottom="true"
                android:alpha="0.5"
                android:background="#000" >

                <TextView
                    android:id="@+id/tv_igr_show_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/bg_white"
                    android:textSize="@dimen/dp13" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_recommend_title_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp6"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="初始化……"
            android:textColor="#464545"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_item_recommend_introduce_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp2"
            android:singleLine="true"
            android:text="初始化……"
            android:textColor="#999"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>