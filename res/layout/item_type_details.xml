<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dp15"
    android:background="@color/bg_white" >

    <ImageView
        android:id="@+id/iv_bg_icon"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp80"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15"
        android:background="@drawable/default_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15"
        android:layout_toRightOf="@+id/iv_bg_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_main_content"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:ellipsize="end"
            android:lines="2"
            android:paddingBottom="@dimen/dp3"
            android:text="@string/action_init_data"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/dp18" />

        <TextView
            android:id="@+id/tv_child_content"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:lines="2"
            android:text="@string/action_init_data"
            android:textColor="@color/bg_light_black"
            android:textSize="@dimen/dp13" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@color/app_line" />

</RelativeLayout>